<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="FF0000"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.omer3.calculatoromer.MainActivity">



    <EditText
        android:id="@+id/om1"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:ems="10"
        android:textSize="25dp"
        android:hint="Type here"
        android:inputType="numberDecimal" />


     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">



        <Button
            android:id="@+id/btn1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:onClick="omer1"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20dp" />


         <Button
             android:id="@+id/btn2"
             android:layout_width="40dp"
             android:layout_height="50dp"
             android:onClick="omer2"
             android:layout_margin="15dp"
             android:layout_weight="1"
             android:text="-"
             android:textSize="20dp" />


         <Button
             android:id="@+id/btn3"
             android:layout_width="40dp"
             android:layout_height="50dp"
             android:onClick="omer3"
             android:layout_margin="15dp"
             android:layout_weight="1"
             android:text="*"
             android:textSize="20dp" />


         <Button
             android:id="@+id/btn4"
             android:layout_width="40dp"
             android:layout_height="50dp"
             android:onClick="omer4"
             android:layout_margin="15dp"
             android:layout_weight="1"
             android:text="/"
             android:textSize="20dp" />

     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




        <Button
            android:id="@+id/btn5"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:onClick="omer5"
            android:layout_weight="1"
            android:text="A/C"
            android:textSize="15dp" />


        <Button
            android:id="@+id/btn6"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:onClick="omer6"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="=" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="225dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="omer7"
            android:text="credits" />

    </LinearLayout>















